<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TranslucentBase">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TranslucentTheme" parent="AppTheme.TranslucentBase">

    </style>

    <style name="AppTheme.FullscreenThemeBase">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="actionBarStyle">@style/AppActionBar</item>

    </style>

    <style name="AppActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/AppActionBarTitleText</item>
        <item name="android:subtitleTextStyle">@style/AppActionBarTitleText</item>
        <item name="android:displayOptions">showTitle</item>
    </style>

    <style name="AppActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>


    <style name="FullscreenTheme" parent="AppTheme.FullscreenThemeBase">

    </style>


    <style name="search_bar_card_defaults">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="search_bar_card" parent="search_bar_card_defaults"></style>

    <style name="search_edit_text">
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@drawable/ic_search_black_24dp</item>
        <item name="android:drawableStart">@drawable/ic_search_black_24dp</item>
        <item name="android:drawablePadding">@dimen/search_bar_icon_padding</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">textCapSentences|textAutoCorrect|textAutoComplete</item>
        <item name="android:paddingBottom">@dimen/search_bar_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/search_bar_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/search_bar_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/search_bar_vertical_padding</item>
    </style>


    <style name="nsfw_warning">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/nsfw_warning_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/nsfw_warning_text_color</item>
    </style>

    <style name="overlapping_description">
        <item name="android:autoLink">web</item>
        <item name="android:background">@color/description_background</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:textColor">@color/description_text_color</item>
    </style>
</resources>
